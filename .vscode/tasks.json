{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Foundry - Build",
      "type": "shell",
      "command": "btp-scs foundry build",
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "problemMatcher": []
    },
    {
      "label": "Hardhat - Build",
      "type": "shell",
      "command": "btp-scs hardhat build",
      "group": {
        "kind": "build",
        "isDefault": false
      },
      "problemMatcher": []
    },
    {
      "label": "Foundry - Test",
      "type": "shell",
      "command": "btp-scs foundry test",
      "group": "test",
      "problemMatcher": []
    },
    {
      "label": "Hardhat - Test",
      "type": "shell",
      "command": "btp-scs hardhat test",
      "group": "test",
      "problemMatcher": []
    },
    {
      "label": "Foundry - Format",
      "type": "shell",
      "command": "btp-scs foundry format",
      "problemMatcher": []
    },
    {
      "label": "Foundry - Start network",
      "type": "shell",
      "command": "btp-scs foundry network",
      "problemMatcher": [],
      "isBackground": true
    },
    {
      "label": "Hardhat - Start network",
      "type": "shell",
      "command": "btp-scs hardhat network",
      "problemMatcher": [],
      "isBackground": true
    },
    {
      "label": "Hardhat - Deploy to local network",
      "type": "shell",
      "command": "btp-scs hardhat deploy local -m ${input:deployment-module}",
      "problemMatcher": []
    },
    {
      "label": "Hardhat - 01 - Deploy contract and upload images",
      "type": "shell",
      "command": "btp-scs hardhat script remote -s ${input:deployment-script}",
      "problemMatcher": []
    },
    {
      "label": "Hardhat - 02 - Set provenance hash",
      "type": "shell",
      "command": "btp-scs hardhat script remote -s ${input:provenance-hash-script}",
      "problemMatcher": []
    },
    {
      "label": "Hardhat - 03 - Collect reserved tokens",
      "type": "shell",
      "command": "btp-scs hardhat script remote -s ${input:reserved-script}",
      "problemMatcher": []
    },
    {
      "label": "Hardhat - 04 - create whitelist and set root",
      "type": "shell",
      "command": "btp-scs hardhat script remote -s ${input:whitelist-script}",
      "problemMatcher": []
    },
    {
      "label": "Hardhat - 05 - Start presale",
      "type": "shell",
      "command": "btp-scs hardhat script remote -s ${input:presale-script}",
      "problemMatcher": []
    },
    {
      "label": "Hardhat - 06 - Start public sale",
      "type": "shell",
      "command": "btp-scs hardhat script remote -s ${input:public-sale-script}",
      "problemMatcher": []
    },
    {
      "label": "Hardhat - 07 - reveal tokens",
      "type": "shell",
      "command": "btp-scs hardhat script remote -s ${input:reveal-script}",
      "problemMatcher": []
    },
    {
      "label": "The Graph - Deploy or update the subgraph",
      "type": "shell",
      "command": "btp-scs subgraph deploy",
      "problemMatcher": []
    }
  ],
  "inputs": [
    {
      "id": "deployment-module",
      "description": "Hardhat Ignition Module",
      "type": "promptString",
      "default": "ignition/modules/ThumbzUp.ts"
    },
    {
      "id": "deployment-script",
      "description": "Hardhat deployment script",
      "type": "promptString",
      "default": "scripts/deploy.ts"
    },
    {
      "id": "provenance-hash-script",
      "description": "Hardhat deployment script",
      "type": "promptString",
      "default": "scripts/setProvenanceHash.ts"
    },
    {
      "id": "presale-script",
      "description": "Hardhat deployment script",
      "type": "promptString",
      "default": "scripts/presale.ts"
    },
    {
      "id": "reserved-script",
      "description": "Hardhat deployment script",
      "type": "promptString",
      "default": "scripts/collectReserved.ts"
    },
    {
      "id": "public-sale-script",
      "description": "Hardhat deployment script",
      "type": "promptString",
      "default": "scripts/publicSale.ts"
    },
    {
      "id": "whitelist-script",
      "description": "Hardhat deployment script",
      "type": "promptString",
      "default": "scripts/whitelist.ts"
    },
    {
      "id": "reveal-script",
      "description": "Hardhat deployment script",
      "type": "promptString",
      "default": "scripts/reveal.ts"
    }
  ]
}